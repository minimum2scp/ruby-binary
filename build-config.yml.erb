---
targets:
<%
  platforms = %w[sid-amd64 trixie-amd64 bookworm-amd64 bullseye-amd64]
  versions = %w[3.0.7 3.1.7 3.2.9 3.3.9 3.4.5]
  matrix = platforms.product(versions)

  matrix.each do |platform, version|
    case platform
    when 'sid-amd64'
      image = 'minimum2scp/ruby:latest'
    when 'trixie-amd64'
      image = 'minimum2scp/ruby-trixie:latest'
    when 'bookworm-amd64'
      image = 'minimum2scp/ruby-bookworm:latest'
    when 'bullseye-amd64'
      image = 'minimum2scp/ruby-bullseye:latest'
    end

    case version
    when '3.4.5'
      update_rubygems = '3.7.2'
      install_bundler = false
      ruby_configure_opts = '--enable-load-relative'
      install_rust = true
    when '3.3.9'
      update_rubygems = '3.7.2'
      install_bundler = false
      ruby_configure_opts = '--enable-load-relative'
      install_rust = true
    when '3.2.9'
      update_rubygems = '3.7.2'
      install_bundler = false
      ruby_configure_opts = '--enable-load-relative'
      install_rust = true
    when '3.1.7'
      update_rubygems = '3.6.9'
      install_bundler = false
      ruby_configure_opts = '--enable-load-relative'
      install_rust = false
    when '3.0.7'
      update_rubygems = '3.5.23'
      install_bundler = false
      ruby_configure_opts = '--enable-load-relative'
      install_rust = false
    end

    if ( platform == 'sid-amd64' || platform == 'trixie-amd64' || platform == 'bookworm-amd64' ) && version.start_with?('3.0.')
      openssl = {
        version: '1.1.1w',
        tarball_url: 'https://github.com/openssl/openssl/releases/download/OpenSSL_1_1_1w/openssl-1.1.1w.tar.gz',
      }
    else
      openssl = nil
    end

    if platform == 'bullseye-amd64'
      ruby_configure_opts += ' --with-openssl-dir=/usr'
    end

    definition = {
      # 'x.x.x' => '(url)#(sha256sum)'
    }[version]

-%>
  - image: <%= image %>
    platform: <%= platform %>
    version: <%= version %>
    <%- if openssl -%>
    openssl:
      version: <%= openssl[:version] %>
      tarball_url: <%= openssl[:tarball_url] %>
    <%- end -%>
    install_rust: <%= install_rust %>
    <%- if definition -%>
    src: '<%= definition %>'
    <%- end -%>

    envs:
      RUBY_CONFIGURE_OPTS: <%= ruby_configure_opts.dump %>
      <%- if platform == 'sid-amd64' && (version.start_with?('3.0.') || version.start_with?('3.1.')) -%>
      RUBY_CFLAGS: "-std=gnu17"
      <%- end -%>

    before_build:
      <%- if platform == 'bullseye-amd64' || platform == 'bookworm-amd64' -%>
      ## assert no-merged-usr (see https://github.com/minimum2scp/dockerfiles/pull/191)
      - if [ -L /bin -o -L /lib -o -L /sbin ]; then exit 1; fi
      <%- end -%>

    after_build:
      - rbenv global <%= version %>
      - ruby --version
      - gem --version
      <%- if update_rubygems -%>
      - gem update --system <%= update_rubygems %> -N
      - gem --version
      <%- end -%>
      <%- if install_bundler -%>
      - gem install bundler --version <%= install_bundler %> -f -N
      <%- end -%>

<% end %>
